#contact.contact
    .container
        h2.text-center If you like our products then contact us for details
        .row
            .col-sm-6.col-sm-offset-3
                form
                    .form-group
                        input#name.form-control(name='name', type='text', placeholder='Name')
                    .form-group
                        input#email.form-control(name='email', type='email', placeholder='Email address')
                    .form-group
                        textarea#message.form-control(name='message', placeholder='Your Message', rows='5')
                    button.btn.btn-warning(type='submit')
                        i.fa.fa-send-o
                        |  Submit

